<div class="trip-content">
  <div class="card">
    <div class="title-trip">
      <h1><%= @trip.name %></h1>
    </div>

    <% if @trip.photo.attached? && @trip.photo.key.present? %>
      <%= cl_image_tag @trip.photo.key, alt: "AI-generated image of the trip", class: "trip-image" %>
    <% else %>
      <p>📷 Imagem em processamento... Tente recarregar a página em alguns instantes.</p>
    <% end %>

    <div class="content-box">
      <% if @trip.content.present? %>
        <%= @markdown.render(@trip.content).html_safe %>
      <% else %>
        <p>📝 Roteiro em processamento... Tente recarregar a página em alguns instantes.</p>
      <% end %>
    </div>

    <%= link_to "Back to home", root_path, class: "btn btn-segundo" %>
  </div>
</div>

