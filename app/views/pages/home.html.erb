<div class="baner text-center text-md-start">
  <div class="container">
    <h1 class="titulo">
      Enchanting experiences, <br>with incredible locals
    </h1>
    <p class="lead text-muted">
      Book unique and memorable travel experiences guided by locals.
    </p>

    <div class="search-box mx-auto">
      <%= form_with url: profiles_path, method: :get, class: "d-flex justify-content-center" do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Where are you going?" %>
          <button class="btn btn-pesquisa" type="submit">
            üîç Search
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h2 class="fw-bold">Go local in Charming Cities</h2>
  <p class="text-muted">Find a private guided tour with one of our locals</p>

  <div class="row g-3">
    <% ["Bangkok", "Istanbul", "Amsterdam"].each do |city| %>
      <div class="col-12 col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= city %></h5>
            <%= link_to 'Explore', '#', class: 'btn btn-explore' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
